{% if _ENV.mode == 'canvas' %}

<div class="px2-blog-kit">

<div class="px2-blog-kit__pager">
	<ul>
		<li class="px2-blog-kit__pager-first"><span>&lt;&lt;</span></li>
		<li class="px2-blog-kit__pager-prev"><span>&lt;</span></li>
		<li><span class="px2-blog-kit__pager-current">1</span></li>
		<li><a href="#">2</a></li>
		<li><a href="#">3</a></li>
		<li><a href="#">4</a></li>
		<li class="px2-blog-kit__pager-next"><a href="#">&gt;</a></li>
		<li class="px2-blog-kit__pager-last"><a href="#">&gt;&gt;</a></li>
	</ul>
</div><!-- /.pager -->




<div class="px2-blog-kit__list">
	<ul>

{% for i in 0..(dpp-1) %}

		<li class="px2-blog-kit__list-item">
			<div class="px2-blog-kit__list-title">
				<p><a href="#">{% if _ENV.lang == 'ja' %}ブログ記事タイトル{% else %}Blog article title{% endif %}</a></p>
				<div class="px2-blog-kit__list-release-date">
					{% if _ENV.lang == 'ja' %}公開日: YYYY年MM月DD日{% else %}Release Date: YYYY/MM/DD{% endif %}
				</div>
			</div>
			<div class="px2-blog-kit__list-thumb">
				<a href="#" style="background-image:url('data:image/png;base64,');"></a>
			</div>
			<div class="px2-blog-kit__list-body">
				<div class="px2-blog-kit__list-summary">
					{% if _ENV.lang == 'ja' %}
					<p>記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー記事サマリー。</p>
					{% else %}
					<p>Article summary Article summary Article summary Article summary Article summary Article summary Article summary Article summary Article summary Article summary Article summary Article summary Article summary Article summary Article summary Article summary Article summary Article summary.</p>
					{% endif %}
				</div>
				<p class="px2-blog-kit__list-link-to-article">
					<a href="#" class="px2-blog-kit__list-a">{% if _ENV.lang == 'ja' %}記事を読む{% else %}Read More...{% endif %}</a>
				</p>
			</div>
		</li>

{% endfor %}

	</ul>
</div>



<div class="px2-blog-kit__pager">
	<ul>
		<li class="px2-blog-kit__pager-first"><span>&lt;&lt;</span></li>
		<li class="px2-blog-kit__pager-prev"><span>&lt;</span></li>
		<li><span class="px2-blog-kit__pager-current">1</span></li>
		<li><a href="#">2</a></li>
		<li><a href="#">3</a></li>
		<li><a href="#">4</a></li>
		<li class="px2-blog-kit__pager-next"><a href="#">&gt;</a></li>
		<li class="px2-blog-kit__pager-last"><a href="#">&gt;&gt;</a></li>
	</ul>
</div><!-- /.pager -->

</div>

{% else %}
<!-- px2-blog-kit -->
<?= $px->blog->mk_list_page(
	array(
		"blog_id"=> '{{ blog_id ?? '' }}',
		"orderby" => '{{ orderby ?? 'update_date' }}',
		"scending" => '{{ scending ?? 'desc' }}',
		"dpp" => {{ dpp ?? 10 }},
		"index_size" => {{ index_size ?? 5 }},
		"list_page_id" => {{ list_page_id ? '\''~list_page_id~'\'' : 'null' }},
	)
); ?>
<!-- / px2-blog-kit -->
{% endif %}
